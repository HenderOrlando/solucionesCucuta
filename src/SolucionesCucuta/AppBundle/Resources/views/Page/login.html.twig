{% extends "::base_index.html.twig" %}

{% block stylesheets %}
    {{ parent() }}

    {% stylesheets
    'bundles/app/css/login.css'
    output='css/compiled/main.css' filter='?uglifycss' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}

{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData) }}</div>
    {% endif %}
    <div class="uk-vertical-align uk-text-center uk-height-1-1">
        <div class="uk-vertical-align-middle uk-width-2-5" >

            {% image '@AppBundle/Resources/public/images/logo.png' %}
            <img src="{{ asset_url }}" class="uk-margin-bottom uk-responsive-width" alt="Soluciones Cúcuta">
            {% endimage %}

            <form action="{{ url('login_check') }}" method="post" class="uk-panel uk-panel-box uk-form">
                <div class="uk-form-row">
                    <input name="_username" id="username" class="uk-width-1-1 uk-form-large" type="text" placeholder="Username" value="{{ last_username }}">
                </div>
                <div class="uk-form-row">
                    <input name="_password" id="password" class="uk-width-1-1 uk-form-large" type="password" placeholder="Password">
                </div>
                <div class="uk-form-row">
                    <button type="submit" class="uk-width-1-1 uk-button uk-button-primary uk-button-large">Login</button>
                </div>
                <div class="uk-form-row uk-text-small">
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <label class="uk-float-left"><input type="checkbox">Recordarme</label>
                    <a class="uk-float-right uk-link uk-link-muted" href="#">Olvidó el Password?</a>
                </div>
            </form>

        </div>
    </div>
{% endblock %}