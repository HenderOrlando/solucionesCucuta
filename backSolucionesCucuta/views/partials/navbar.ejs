<nav id="soluciones-cucuta-navbar" class="uk-navbar uk-flex uk-flex-middle uk-flex-center">
  <div class="uk-navbar-brand uk-width-small-1-1 uk-width-medium-1-6" data-uk-dropdown="{mode:'click',justify:'#soluciones-cucuta-navbar'}">
    <a href="" class="uk-navbar-brand">
      <img src="<%= brand.src %>" alt="<%= brand.nombre %>">
    </a>

    <div class="uk-dropdown uk-dropdown-small uk-dropdown-width-3">
      <ul class="uk-nav uk-nav-dropdown uk-grid uk-dropdown-grid">
        <% _.each(brand.subnavs, function(subnav){ %>
        <li class="uk-width-1-3">
          <a href="<%= subnav.href %>">
            <%=: __(subnav.nombre)|capitalize %>
          </a>
        </li>
        <% }) %>
      </ul>
    </div>
  </div>
  <div class="uk-navbar-flip uk-width-small-1-1 uk-width-medium-5-6">
    <ul class="uk-navbar-nav uk-width-small-1-1 uk-text-center">
      <% include nav %>
      <li class="uk-width-small-1-5 uk-width-medium-1-5">
        <form action="/Buscar" class="uk-form uk-margin-remove uk-display-inline-block uk-width-small-1-1">
          <div class="uk-grid uk-grid-collapse">
            <div class="uk-width-1-2">
              <input name="query" type="text" placeholder="<%= __('buscar') %>">
            </div>
            <div class="uk-width-1-2">
              <button type="submit" class="uk-button uk-button-primary"><%= __('buscar') %></button>
            </div>
            <input type='hidden' name='_csrf' value='<%= _csrf %>'>
          </div>
        </form>
      </li>
    </ul>
  </div>
</nav>
